<div class="page-header">
  <%= link_to line_items_path, :class => 'btn btn-purple' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_line_item_path(@line_item), :class => 'btn btn-purple' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
