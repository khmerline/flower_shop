<legend>Sign in</legend>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<form class="form-horizontal" role="form">

	<div class="form-group">

  <div><%= f.label :email, :class=>'col-sm-2 control-label ' %><br /></div>
  <div class="col-sm-10"><%= f.email_field :email, :class=>'form-control', :autofocus => true %></div><br><br><br>

  <div><%= f.label :password, :class=>'col-sm-2 control-label ' %><br /></div>
  <div class="col-sm-10">	<%= f.password_field :password, :class=>'form-control' %></div><br>

<div class="form-group">

  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-2 col-sm-8"><%= f.check_box :remember_me , :class=>"check_box" %> <%= f.label :remember_me  %></div>
  <% end -%>

</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-8"><%= f.submit "Sign in", :class=>'btn btn-purple' %></div>
</div>  
<% end %>

</div><!--form-group-->

</form><!--form-horizontal-->

