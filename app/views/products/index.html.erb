<div class="page-header">
  <%= link_to new_product_path, :class => 'btn btn-purple' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product
  <% end %>
  <h1>Listing Products</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead >
      <tr class="purple">
            <th >Title</th>
            <th>Decription</th>
            <th>Image url</th>
            <th>Price</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @products) do |product| %>
            <td><%= product.title %></td>
            <td><%= product.decription %></td>
            <td><%= product.image_url %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= link_to 'Show', product,:class => 'btn btn-purple' %></td>
        <td><%= link_to  'Edit', edit_product_path(product),:class => 'btn btn-purple' %></td>
        <td><%= link_to 'Destroy', product ,:class => 'btn btn-purple', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
